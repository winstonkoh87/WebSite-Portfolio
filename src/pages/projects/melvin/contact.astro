<style>
    .page-header {
        padding: 8rem 0 4rem 0;
        text-align: center;
    }

    .eyebrow {
        font-family: var(--mv-font-mono);
        color: var(--mv-accent);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-size: 0.8rem;
        display: block;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .lead {
        color: var(--mv-text-muted);
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding-bottom: 8rem;
    }

    .contact-card {
        background: var(--mv-surface);
        padding: 3rem 2rem;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.03);
        text-align: center;
        text-decoration: none;
        transition: transform 0.2s, background 0.2s;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .contact-card:hover {
        transform: translateY(-5px);
        background: #1a1a1a;
        border-color: rgba(255,255,255,0.1);
    }

    .icon-box {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }

    .contact-card h3 {
        color: var(--mv-text-main);
        margin: 0;
        font-size: 1.5rem;
    }

    .contact-card p {
        color: var(--mv-text-muted);
        margin: 0;
        font-family: var(--mv-font-mono);
        font-size: 0.9rem;
    }

    .link-arrow {
        margin-top: 1rem;
        color: var(--mv-accent);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
        opacity: 0.8;
    }

    .contact-card:hover .link-arrow {
        opacity: 1;
    }

    @media (max-width: 768px) {
        h1 { font-size: 2.5rem; }
    }
</style>
